<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
    </padding>
    <children>
        <Label text="Leaderboard" 
            style="-fx-font-size: 24px; 
                    -fx-font-weight: bold; 
                    -fx-text-fill: white; 
                    -fx-background-color: #8B4513; 
                    -fx-font-weight: bold;
                    -fx-padding: 5px;
                    -fx-pref-width: 200px;
                    -fx-pref-height: 50px;
                    -fx-alignment: center;" />
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="updateButton" text="Update Leaderboard"
                    style="-fx-background-color: #8B4513;
                           -fx-text-fill: white;
                           -fx-font-size: 12px;
                           -fx-font-weight: bold;
                           -fx-border-radius: 20px;
                           -fx-padding: 8px 20px;"
                    onAction="#handleUpdateButton" />
            <Button fx:id="sortByWinsButton" text="Sort by Wins"
                    style="-fx-background-color: #8B4513;
                           -fx-text-fill: white;
                           -fx-font-size: 12px;
                           -fx-font-weight: bold;
                           -fx-border-radius: 20px;
                           -fx-padding: 8px 20px;"
                    onAction="#handleSortByWinsButton" />
            <Button fx:id="sortByWinPercentageButton" text="Sort by Win Percentage"
                    style="-fx-background-color: #8B4513;
                           -fx-text-fill: white;
                           -fx-font-size: 12px;
                           -fx-font-weight: bold;
                           -fx-border-radius: 20px;
                           -fx-padding: 8px 20px;"
                    onAction="#handleSortByWinPercentageButton" />
        </HBox>
        <TableView fx:id="leaderboardTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="rankColumn" text="Rank" />
                <TableColumn fx:id="usernameColumn" text="Username" />
                <TableColumn fx:id="winsColumn" text="Wins" />
                <TableColumn fx:id="winPercentageColumn" text="Win %" />
                <TableColumn fx:id="favColumn" text="Fav" />
            </columns>
        </TableView>
    </children>
</VBox>
